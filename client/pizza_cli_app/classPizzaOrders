class PizzaOrders:
    """Команда для вывода истории заказов пиццы"""

    def __init__(self, args):
        self.args = args

    def run(self, session):
        show_id = self.args.show_id
        active = self.args.active
        completed = self.args.completed
        all_orders = self.args.all

        # Загружаем все заказы с сервера
        orders = session.get_all_orders()

        # Фильтруем заказы по параметрам
        filtered_orders = []
        if all_orders is True:
            filtered_orders = orders
        elif active is True:
            filtered_orders = [order for order in orders if order['status'] == 'active']
        elif completed is True:
            filtered_orders = [order for order in orders if order['status'] == 'completed']

        # Выводим заказы на экран
        for i, order in enumerate(filtered_orders, 1):
            if show_id:
                print(f'{order["id"]}. {order["pizza_name"]} - {order["status"]}')
            else:
                print(f'{i}. {order["pizza_name"]} - {order["status"]}')
